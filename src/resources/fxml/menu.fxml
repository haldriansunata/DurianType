<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="500" minWidth="600" prefHeight="750" prefWidth="1000" styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.typingapp.controller.MenuController">

    <padding>
        <Insets bottom="30" left="50" right="50" top="30" />
    </padding>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="35">
            
            <!-- Title - HELLO USER (Clickable to Profile with Hover Effect) -->
            <VBox alignment="CENTER" spacing="10">
                <Label fx:id="welcomeLabel" 
                       text="Hello, Guest" 
                       onMouseClicked="#handleProfile"
                       styleClass="header-label, clickable-title" 
                       style="-fx-font-size: 72px; -fx-text-fill: #FFD54F; -fx-font-weight: 900; -fx-cursor: hand;" />
                <Label text="Click your name to view profile • Choose your mode below" style="-fx-font-size: 14px; -fx-text-fill: #8B7355; -fx-font-weight: 500;" />
            </VBox>

            <!-- Main Options Grid -->
            <HBox alignment="CENTER" spacing="40" maxWidth="1000">
                
                <!-- Left Panel - Game Settings -->
                <VBox alignment="CENTER" spacing="28" prefWidth="360" styleClass="card" style="-fx-padding: 30px;">
                    <Label text="GAME SETTINGS" style="-fx-font-size: 20px; -fx-font-weight: 700; -fx-text-fill: #FFD54F;" />
                    
                    <!-- Language -->
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="Select Language" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #C9A876;" />
                        <ComboBox fx:id="languageCombo" prefWidth="260" styleClass="combo-box" />
                    </VBox>

                    <!-- Duration -->
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="Choose Duration" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #C9A876;" />
                        <HBox alignment="CENTER" spacing="18">
                            <RadioButton fx:id="rb15" text="15 sec" styleClass="radio-button" style="-fx-font-size: 14px;" />
                            <RadioButton fx:id="rb30" text="30 sec" styleClass="radio-button" style="-fx-font-size: 14px;" />
                            <RadioButton fx:id="rb60" text="60 sec" styleClass="radio-button" style="-fx-font-size: 14px;" />
                        </HBox>
                    </VBox>
                    
                </VBox>

                <!-- Right Panel - Quick Actions -->
                <VBox alignment="CENTER" spacing="18" prefWidth="420">
                    
                    <Label text="QUICK START" style="-fx-font-size: 20px; -fx-font-weight: 700; -fx-text-fill: #FFD54F;">
                        <VBox.margin>
                            <Insets bottom="12" />
                        </VBox.margin>
                    </Label>
                    
                    <Button minWidth="340" onAction="#handlePlayTimeMode" prefWidth="380" styleClass="button-primary" text="START TIME MODE" style="-fx-font-size: 16px;">
                        <VBox.margin>
                            <Insets bottom="6" />
                        </VBox.margin>
                    </Button>
                    
                    <Button minWidth="340" onAction="#handlePlayCustom" prefWidth="380" styleClass="button-secondary" text="CUSTOM TEXT" style="-fx-font-size: 16px;">
                        <VBox.margin>
                            <Insets bottom="6" />
                        </VBox.margin>
                    </Button>
                    
                    <Button minWidth="340" onAction="#handleLeaderboard" prefWidth="380" styleClass="button-secondary" text="LEADERBOARD" style="-fx-font-size: 16px;">
                        <VBox.margin>
                            <Insets bottom="6" />
                        </VBox.margin>
                    </Button>
                    
                    <!-- Tip Box -->
                    <VBox spacing="6" alignment="CENTER" styleClass="card" style="-fx-padding: 16px 24px;">
                        <VBox.margin>
                            <Insets top="16" />
                        </VBox.margin>
                        <Label text="DAILY TIP" style="-fx-font-size: 12px; -fx-font-weight: 700; -fx-text-fill: #C9A876;" />
                        <Label text="Practice daily to see improvement!" style="-fx-font-size: 13px; -fx-text-fill: #FFFFFF;" textAlignment="CENTER" wrapText="true" />
                    </VBox>
                    
                </VBox>

            </HBox>

        </VBox>
    </center>

    <!-- Bottom - Back to Login (LEFT CORNER, BIGGER) -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="0">
            <padding>
                <Insets top="20" left="10" bottom="10"/>
            </padding>
            <Label text="← Back to Login" 
                   onMouseClicked="#handleLogout" 
                   styleClass="nav-link" 
                   style="-fx-cursor: hand; -fx-font-size: 16px; -fx-font-weight: 600;"/>
        </HBox>
    </bottom>

</BorderPane>
